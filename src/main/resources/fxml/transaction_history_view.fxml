<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.TransactionHistoryController"
            prefWidth="1000" prefHeight="700">

    <top>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30 10 30; -fx-background-color: #1a2a6c;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <!-- Removed problematic ImageView -->
                <Text text="Sediba Financial" style="-fx-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Text text="Transaction Reports" style="-fx-fill: #e0e0e0; -fx-font-size: 14;" />
                <Text fx:id="usernameText" text="[Username]" style="-fx-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
            </VBox>

            <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 15 5 15;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 25 40 25 40;">
            <!-- Filter & Search Section -->
            <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Filter Transactions" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <HBox alignment="CENTER_LEFT" spacing="20">
                    <!-- Account Number -->
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Account Number" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <TextField fx:id="accountNumberField" promptText="Enter account number"
                                   style="-fx-pref-width: 150; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Transaction Type -->
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Transaction Type" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <ComboBox fx:id="transactionTypeCombo" promptText="All"
                                  style="-fx-pref-width: 150; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Date Range -->
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="From Date" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <DatePicker fx:id="fromDatePicker"
                                    style="-fx-pref-width: 150; -fx-pref-height: 35;" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="To Date" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <DatePicker fx:id="toDatePicker"
                                    style="-fx-pref-width: 150; -fx-pref-height: 35;" />
                    </VBox>

                    <!-- Search Button -->
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text=" " />
                        <Button text="Search" onAction="#handleSearch"
                                style="-fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Results Table -->
            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Transaction History" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                <TableView fx:id="transactionTable" prefHeight="400"
                           style="-fx-background-color: transparent; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn text="Transaction ID" prefWidth="150" />
                        <TableColumn text="Date" prefWidth="150" />
                        <TableColumn text="Type" prefWidth="120" />
                        <TableColumn text="Account Number" prefWidth="150" />
                        <TableColumn text="Amount (USD)" prefWidth="150" />
                        <TableColumn text="Balance After" prefWidth="150" />
                        <TableColumn text="Reference" prefWidth="200" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Export Buttons -->
            <HBox alignment="CENTER" spacing="25" style="-fx-padding: 10 0 0 0;">
                <Button text="Export to CSV" onAction="#handleExportCSV"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                <Button text="Print Report" onAction="#handlePrintReport"
                        style="-fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                <Button text="Clear Filters" onAction="#handleClearFilters"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            <Text text="Â© 2025 Sediba Financial. All rights reserved." style="-fx-fill: #7f8c8d; -fx-font-size: 12;" />
            <Hyperlink text="Terms and Conditions apply" onAction="#handleTermsAndConditions"
                       style="-fx-text-fill: #1a2a6c; -fx-border-color: transparent;" />
        </VBox>
    </bottom>
</BorderPane>