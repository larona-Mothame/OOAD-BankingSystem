<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.AccountLookupController"
            prefWidth="900" prefHeight="700">

    <top>
        <!-- Header Section -->
        <VBox spacing="15" style="-fx-background-color: #1a2a6c;">
            <!-- Company Logo and Name -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20 30 0 30;">
                <!-- Removed problematic ImageView -->
                <Text text="Sediba Financial" style="-fx-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />

                <Region HBox.hgrow="ALWAYS" />

                <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 15 5 15;" />
            </HBox>

            <!-- User Greeting -->
            <VBox alignment="CENTER_LEFT" style="-fx-padding: 0 30 20 30;">
                <Text text="Good Day" style="-fx-fill: #e0e0e0; -fx-font-size: 14;" />
                <Text fx:id="usernameText" text="[Username]" style="-fx-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 30;">
            <!-- Lookup Account/Customer Section -->
            <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Lookup Account/Customer" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 10 0;">
                    <!-- Search Field -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 400;">
                        <Label text="Search..." style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <TextField fx:id="searchField" promptText="Enter account number, customer name, or ID..."
                                   style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Filter Options -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 200;">
                        <Label text="Filter" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <ComboBox fx:id="filterComboBox" promptText="Select filter..."
                                  style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Search Button -->
                    <Button text="Search" onAction="#handleSearch"
                            style="-fx-translate-y: 15; -fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                </HBox>

                <!-- Search Results Table (initially hidden) -->
                <TableView fx:id="resultsTable" prefHeight="200" visible="false" managed="false"
                           style="-fx-background-color: transparent; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn text="Account Number" prefWidth="150" />
                        <TableColumn text="Account Holder" prefWidth="200" />
                        <TableColumn text="Account Type" prefWidth="120" />
                        <TableColumn text="Date Created" prefWidth="120" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Separator -->
            <Separator style="-fx-background-color: #bdc3c7; -fx-padding: 10 0 10 0;" />

            <!-- Account Details Section -->
            <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Account Details" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <HBox alignment="TOP_LEFT" spacing="50">
                    <!-- Left Column -->
                    <VBox alignment="TOP_LEFT" spacing="20" style="-fx-pref-width: 400;">
                        <VBox alignment="CENTER_LEFT" spacing="8">
                            <Label text="Account Number" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <Text fx:id="accountNumberText" text="-" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        </VBox>

                        <VBox alignment="CENTER_LEFT" spacing="8">
                            <Label text="Account Holder" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <Text fx:id="accountHolderText" text="-" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        </VBox>
                    </VBox>

                    <!-- Right Column -->
                    <VBox alignment="TOP_LEFT" spacing="20" style="-fx-pref-width: 400;">
                        <VBox alignment="CENTER_LEFT" spacing="8">
                            <Label text="Account Type" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <Text fx:id="accountTypeText" text="-" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        </VBox>

                        <VBox alignment="CENTER_LEFT" spacing="8">
                            <Label text="Date Created" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <Text fx:id="dateCreatedText" text="-" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        </VBox>
                    </VBox>
                </HBox>

                <!-- Additional Action Buttons -->
                <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20 0 0 0;">
                    <Button text="View Full Profile" onAction="#handleViewFullProfile"
                            style="-fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                    <Button text="Transaction History" onAction="#handleTransactionHistory"
                            style="-fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                    <Button text="Edit Account" onAction="#handleEditAccount"
                            style="-fx-background-color: transparent; -fx-text-fill: #1a2a6c; -fx-border-color: #1a2a6c; -fx-border-radius: 5; -fx-padding: 10 20 10 20;" />
                </HBox>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            <Text text="Â© 2025 Sediba Financial. All rights reserved." style="-fx-fill: #7f8c8d; -fx-font-size: 12;" />
            <Hyperlink text="Terms and Conditions apply" style="-fx-text-fill: #1a2a6c; -fx-border-color: transparent;" />
        </VBox>
    </bottom>
</BorderPane>