<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.AccountOpeningController"
            prefWidth="1000" prefHeight="800">

    <top>
        <!-- Header Section -->
        <VBox spacing="10" style="-fx-background-color: #1a2a6c;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30 10 30;">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Text text="Sediba Financial" style="-fx-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Text fx:id="progressText" text="Step 1: Personal Information" style="-fx-fill: #e0e0e0; -fx-font-size: 14;" />
                    <Text fx:id="currentUserText" text="Agent: [Username]" style="-fx-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
                </VBox>

                <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 15 5 15;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 20;">
            <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 10;">

                <!-- Progress Indicator -->
                <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                    <Text text="Account Opening Process" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="1. Personal" style="-fx-padding: 8 15 8 15; -fx-background-radius: 20; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" />
                        <Label text="2. Contact" style="-fx-padding: 8 15 8 15; -fx-background-color: #e0e0e0; -fx-background-radius: 20; -fx-text-fill: #7f8c8d;" />
                        <Label text="3. Account" style="-fx-padding: 8 15 8 15; -fx-background-color: #e0e0e0; -fx-background-radius: 20; -fx-text-fill: #7f8c8d;" />
                        <Label text="4. Review" style="-fx-padding: 8 15 8 15; -fx-background-color: #e0e0e0; -fx-background-radius: 20; -fx-text-fill: #7f8c8d;" />
                    </HBox>
                </VBox>

                <!-- STEP 1: Personal Information -->
                <VBox fx:id="step1Personal" alignment="TOP_LEFT" spacing="20"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                    <Text text="Personal Information" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- First Name -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="First Name *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="firstNameField" promptText="Enter first name"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>

                        <!-- Last Name -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Last Name *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="lastNameField" promptText="Enter last name"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- Date of Birth -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Date of Birth *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <DatePicker fx:id="dateOfBirthPicker" promptText="Select date of birth"
                                        style="-fx-pref-width: 100%; -fx-pref-height: 35;" />
                        </VBox>

                        <!-- Gender -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Gender *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <ComboBox fx:id="genderComboBox" promptText="Select gender"
                                      style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- ID Type -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="ID Type *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <ComboBox fx:id="idTypeComboBox" promptText="Select ID type"
                                      style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>

                        <!-- ID Number -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="ID Number *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="idNumberField" promptText="Enter ID number"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- Nationality -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Nationality *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="nationalityField" promptText="Enter nationality"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- STEP 2: Contact Information -->
                <VBox fx:id="step2Contact" alignment="TOP_LEFT" spacing="20" visible="false"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                    <Text text="Contact Information" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- Email -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Email Address *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="emailField" promptText="Enter email address"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>

                        <!-- Phone Number -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Phone Number *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="phoneField" promptText="Enter phone number"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- Address Line 1 -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Address Line 1 *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="addressLine1Field" promptText="Enter street address"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>

                        <!-- Address Line 2 -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Address Line 2" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="addressLine2Field" promptText="Apartment, suite, etc."
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- City -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 200;">
                            <Label text="City *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="cityField" promptText="Enter city"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>

                        <!-- State/Province -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 200;">
                            <Label text="State/Province *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="stateField" promptText="Enter state"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>

                        <!-- ZIP/Postal Code -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 150;">
                            <Label text="ZIP/Postal Code *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="postalCodeField" promptText="Enter postal code"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- STEP 3: Account Information -->
                <VBox fx:id="step3Account" alignment="TOP_LEFT" spacing="20" visible="false"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                    <Text text="Account Information" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                    <HBox alignment="TOP_LEFT" spacing="30">
                        <!-- Account Type -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Account Type *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <ComboBox fx:id="accountTypeComboBox" promptText="Select account type"
                                      style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                            <Label fx:id="selectedAccountTypeLabel" text="" style="-fx-font-size: 12; -fx-text-fill: #3498db;" />
                        </VBox>

                        <!-- Initial Deposit -->
                        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-pref-width: 300;">
                            <Label text="Initial Deposit (BWP) *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                            <TextField fx:id="initialDepositField" promptText="Enter amount"
                                       style="-fx-pref-width: 100%; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>

                    <!-- Account Features -->
                    <VBox alignment="TOP_LEFT" spacing="10">
                        <Label text="Account Features (Optional)" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <HBox alignment="CENTER_LEFT" spacing="30">
                            <CheckBox fx:id="debitCardCheck" text="Debit Card" />
                            <CheckBox fx:id="onlineBankingCheck" text="Online Banking" />
                            <CheckBox fx:id="mobileBankingCheck" text="Mobile Banking" />
                            <CheckBox fx:id="overdraftProtectionCheck" text="Overdraft Protection" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- STEP 4: Review & Submit -->
                <VBox fx:id="step4Review" alignment="TOP_LEFT" spacing="20" visible="false"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                    <Text text="Review &amp; Submit" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                    <GridPane hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="200" />
                            <ColumnConstraints prefWidth="300" />
                        </columnConstraints>

                        <!-- Personal Info Review -->
                        <Label text="Personal Information:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                               style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <TextField fx:id="reviewFirstName" editable="false"
                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;" />
                            <TextField fx:id="reviewLastName" editable="false"
                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;" />
                            <TextField fx:id="reviewIdNumber" editable="false"
                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;" />
                        </VBox>

                        <!-- Contact Info Review -->
                        <Label text="Contact Information:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                               style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <TextField fx:id="reviewEmail" editable="false"
                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;" />
                            <TextField fx:id="reviewPhone" editable="false"
                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;" />
                        </VBox>

                        <!-- Account Info Review -->
                        <Label text="Account Information:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                               style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <TextField fx:id="reviewAccountType" editable="false"
                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;" />
                            <TextField fx:id="reviewInitialDeposit" editable="false"
                                       style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;" />
                        </VBox>
                    </GridPane>

                    <!-- Terms and Conditions -->
                    <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 15 0 0 0;">
                        <Text text="Terms and Conditions" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                        <TextArea prefRowCount="3"
                                  text="By submitting this application, you agree to Sediba Financial's Terms and Conditions and Privacy Policy. Your account will be subject to our standard fees and conditions."
                                  editable="false"
                                  style="-fx-pref-width: 100%; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>
                </VBox>

                <!-- Navigation Buttons -->
                <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20 0 30 0;">
                    <Button fx:id="backButton" text="Back" onAction="#handleBack"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                    <Button text="Cancel" onAction="#handleCancel"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                    <Button text="Save as Draft" onAction="#handleSaveDraft"
                            style="-fx-background-color: transparent; -fx-text-fill: #1a2a6c; -fx-border-color: #1a2a6c; -fx-border-radius: 5; -fx-padding: 10 20 10 20;" />
                    <Button fx:id="nextButton" text="Next" onAction="#handleNext"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                    <Button fx:id="submitButton" text="Submit Application" onAction="#handleSubmit" visible="false"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            <Text text="Â© 2025 Sediba Financial. All rights reserved." style="-fx-fill: #7f8c8d; -fx-font-size: 12;" />
            <HBox alignment="CENTER" spacing="15">
                <Hyperlink text="Terms and Conditions" onAction="#handleViewTerms"
                           style="-fx-text-fill: #1a2a6c; -fx-border-color: transparent;" />
                <Hyperlink text="Privacy Policy" onAction="#handleViewPrivacy"
                           style="-fx-text-fill: #1a2a6c; -fx-border-color: transparent;" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>