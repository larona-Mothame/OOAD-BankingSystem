<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.AccountOpeningController"
            prefWidth="1000" prefHeight="800"
            style="-fx-background-color: rgb(28,124,66);">

    <!-- HEADER -->
    <top>
        <VBox  alignment="CENTER" spacing="10" style="-fx-padding: 15 30; -fx-background-color: #1c3b2c;-fx-border-color: transparent  transparent #22ff00 transparent ; -fx-border-width:  0  0 2 0;" >
            <HBox alignment="CENTER_LEFT" spacing="20">
                <ImageView fitHeight="40" fitWidth="40">
                    <image>
                        <Image url="@/images/5802818.png" />
                    </image>
                </ImageView>
                <Text text="Sediba Financial" style="-fx-fill: #e0e0e0; -fx-font-size: 18; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Text fx:id="progressText" text="Step 1: Personal Information" style="-fx-fill: #aaa; -fx-font-size: 14;  " />

                </VBox>
                <Button onAction="#handleBackToDashboard"
                        text="Logout"
                        contentDisplay="RIGHT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                        graphicTextGap="8">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16">
                            <image>
                                <Image url="@/images/logout_icon.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: rgb(28,124,66); -fx-padding: 25;">
            <VBox fx:id="stepContainer" alignment="TOP_CENTER" spacing="35"  style="-fx-background-color: rgb(28,124,66)" >

                <!-- Progress -->
                <VBox alignment="CENTER" spacing="15"
                      style="-fx-background-color: rgba(42,42,42,0.75); -fx-padding: 25;">
                    <Text text="Account Opening Process"
                          style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #e0e0e0;" />
                    <HBox spacing="12" alignment="CENTER">
                        <Label fx:id="stepLabel1" text="1. Personal"
                               style="-fx-padding: 8 18; -fx-background-radius: 10; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
                        <Label fx:id="stepLabel2" text="2. Contact"
                               style="-fx-padding: 8 18; -fx-background-radius: 10; -fx-background-color: #555; -fx-text-fill: #e0e0e0;"/>
                        <Label fx:id="stepLabel3" text="3. Account"
                               style="-fx-padding: 8 18; -fx-background-radius: 10; -fx-background-color: #555; -fx-text-fill: #e0e0e0;"/>
                        <Label fx:id="stepLabel4" text="4. Review"
                               style="-fx-padding: 8 18; -fx-background-radius: 10; -fx-background-color: #555; -fx-text-fill: #e0e0e0;"/>
                    </HBox>
                </VBox>

                <!-- STEP 1 -->
                <VBox fx:id="step1Personal" spacing="22"
                      style="-fx-background-color: rgba(42,42,42,0.75); -fx-padding: 25;">
                    <Text text="Personal Information"
                          style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #ffffff;"/>
                    <GridPane hgap="25" vgap="18">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>
                        <Label text="First Name *" GridPane.rowIndex="0" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="firstNameField" GridPane.rowIndex="1"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-background-color: #1f1f1f; -fx-text-fill: #e0e0e0;"/>
                        <Label text="Last Name *" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="Date of Birth *" GridPane.rowIndex="2" style="-fx-text-fill: #ffffff;"/>
                        <DatePicker fx:id="dateOfBirthPicker" GridPane.rowIndex="3"
                                    style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="Gender *" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #ffffff;"/>
                        <ComboBox fx:id="genderComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                  style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #e0e0e0;"/>
                        <Label text="ID Type *" GridPane.rowIndex="4" style="-fx-text-fill: #e0e0e0;"/>
                        <ComboBox fx:id="idTypeComboBox" GridPane.rowIndex="5"
                                  style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="ID Number *" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-text-fill: #e0e0e0;"/>
                        <TextField fx:id="idNumberField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="Nationality *" GridPane.rowIndex="6" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="nationalityField" GridPane.rowIndex="7"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                    </GridPane>
                </VBox>

                <!-- STEP 2 -->
                <VBox fx:id="step2Contact" spacing="22" visible="false"
                      style="-fx-background-color: rgba(42,42,42,0.75); -fx-padding: 25; -fx-background-radius: 12;">
                    <Text text="Contact Information" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #ffffff;"/>
                    <GridPane hgap="25" vgap="18">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>
                        <Label text="Email Address *" GridPane.rowIndex="0" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="emailField" GridPane.rowIndex="1"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="Phone Number *" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-text-fill: #e0e0e0;"/>
                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="Address Line 1 *" GridPane.rowIndex="2" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="addressLine1Field" GridPane.rowIndex="3"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="Address Line 2" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="addressLine2Field" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="City *" GridPane.rowIndex="4" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="cityField" GridPane.rowIndex="5"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="State/Province *" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="stateField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                        <Label text="ZIP/Postal Code *" GridPane.rowIndex="6" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="postalCodeField" GridPane.rowIndex="7"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                    </GridPane>
                </VBox>

                <!-- STEP 3 -->
                <VBox fx:id="step3Account" spacing="22" visible="false"
                      style="-fx-background-color: rgba(42,42,42,0.75); -fx-padding: 25; -fx-background-radius: 12; ">
                    <Text text="Account Information" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #ffffff;"/>
                    <GridPane hgap="25" vgap="18">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>
                        <Label text="Account Type *" GridPane.rowIndex="0" style="-fx-text-fill: #ffffff;"/>
                        <VBox GridPane.rowIndex="1">
                            <ComboBox fx:id="accountTypeComboBox"
                                      style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                            <Label fx:id="selectedAccountTypeLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12;"/>
                        </VBox>
                        <Label text="Initial Deposit (BWP) *" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="initialDepositField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   style="-fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6; -fx-background-color: #1f1f1f; -fx-text-fill: #ffffff;"/>
                    </GridPane>
                </VBox>

                <!-- STEP 4 -->
                <VBox fx:id="step4Review" spacing="22" visible="false"
                      style="-fx-background-color: rgba(42,42,42,0.75); -fx-padding: 25; -fx-background-radius: 12;">
                    <Text text="Review &amp; Submit" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #e0e0e0;"/>
                    <GridPane hgap="25" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="35"/>
                            <ColumnConstraints percentWidth="65"/>
                        </columnConstraints>
                        <Label text="First Name:" GridPane.rowIndex="0" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="reviewFirstName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                   style="-fx-background-color: #1f1f1f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6;"/>
                        <Label text="Last Name:" GridPane.rowIndex="1" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="reviewLastName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   style="-fx-background-color: #1f1f1f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6;"/>
                        <Label text="ID Number:" GridPane.rowIndex="2" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="reviewIdNumber" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                   style="-fx-background-color: #1f1f1f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6;"/>
                        <Label text="Email:" GridPane.rowIndex="3" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="reviewEmail" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                   style="-fx-background-color: #1f1f1f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6;"/>
                        <Label text="Phone:" GridPane.rowIndex="4" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="reviewPhone" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                   style="-fx-background-color: #1f1f1f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6;"/>
                        <Label text="Account Type:" GridPane.rowIndex="5" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="reviewAccountType" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5"
                                   style="-fx-background-color: #1f1f1f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6;"/>
                        <Label text="Initial Deposit (BWP):" GridPane.rowIndex="6" style="-fx-text-fill: #ffffff;"/>
                        <TextField fx:id="reviewInitialDeposit" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6"
                                   style="-fx-background-color: #1f1f1f; -fx-text-fill: #ffffff; -fx-background-radius: 6; -fx-border-color: #444; -fx-border-radius: 6;"/>
                    </GridPane>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <VBox spacing="10" style="-fx-background-color: #222; -fx-padding: 15;">
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: red; -fx-text-fill: #ffffff; -fx-border-radius: 5; -fx-padding: 5 15;"/>
                <Button fx:id="backButton" text="Back" onAction="#handleBack" style="-fx-background-color: rgb(39,174,96); -fx-text-fill: #e0e0e0;-fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button fx:id="nextButton" text="Next" onAction="#handleNext" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;-fx-padding: 5 15;"/>
                <Button fx:id="submitButton" text="Submit Application" onAction="#handleSubmit" visible="false" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;-fx-padding: 5 15;"/>
            </HBox>

            <HBox alignment="CENTER" spacing="15">
                <Hyperlink text="Terms and Conditions" onAction="#handleViewTerms"
                           style="-fx-text-fill: #ffffff; -fx-border-color: transparent;" />
                <Hyperlink text="Privacy Policy" onAction="#handleViewPrivacy"
                           style="-fx-text-fill: #ffffff; -fx-border-color: transparent;" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
