<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.CustomerDashboardController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color:  #1c7c42;">





    <!-- TOP HEADER -->
    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15 30; -fx-background-color: #1c3b2c; -fx-border-color: transparent transparent #22ff00 transparent; -fx-border-width: 0 0 2 0;">
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@/images/5802818.png" />
                </image>
            </ImageView>
            <Text text="Sediba Financial" style="-fx-fill: #e0e0e0; -fx-font-size: 28; -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS"/>


            <HBox alignment="CENTER" spacing="5">
                <Text style="-fx-fill: #ffffff;" text="Good Day " />
            </HBox>

                <Text fx:id="customerNameText" text="[Customer Name]" style="-fx-fill: #e0e0e0; -fx-font-size: 18; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Logout button with icon -->
                <Button onAction="#handleLogout"
                        text="Logout"
                        contentDisplay="RIGHT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                        graphicTextGap="8">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16">
                            <image>
                                <Image url="@/images/logout_icon.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <SplitPane dividerPositions="0.5" style="-fx-background-color: transparent;">

            <!-- LEFT: Account Overview -->
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Account Summary -->
                <VBox spacing="12" style="-fx-background-color: rgba(42,42,42,0.5); -fx-padding: 20; -fx-background-radius: 2; -fx-border-radius: 2;">
                    <HBox alignment="CENTER_LEFT">
                        <Text text="Account Overview" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #e0e0e0;" />
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="totalBalanceLabel" text="Total: 0.00"
                               style="-fx-padding: 8 15; -fx-background-radius: 8; -fx-font-weight: bold; -fx-background-color: rgba(37,37,37,0.5); -fx-text-fill: white;" />
                    </HBox>
                    <HBox spacing="15" alignment="CENTER">
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgb(51,51,51,0.5); -fx-padding: 12; -fx-background-radius: 2;
                         -fx-min-width: 100; -fx-border-color: #1a1a1a; -fx-border-width: 1; -fx-border-radius: 2;">
                            <Text text="Accounts" style="-fx-font-size: 14; -fx-fill: rgba(255,255,255,0.8);"/>
                            <Text fx:id="totalAccountsText" text="0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: white;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(51,51,51,0.5); -fx-padding: 12; -fx-background-radius: 2;
                         -fx-min-width: 100; -fx-border-color: #1a1a1a; -fx-border-width: 1; -fx-border-radius: 2;">
                            <Text text="This Month" style="-fx-font-size: 14; -fx-fill: rgba(224,224,224,0.7);"/>
                            <Text fx:id="monthlySpendingText" text="BWP 0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #e0e0e0;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(51,51,51,0.5); -fx-padding: 12; -fx-background-radius: 2;
                        -fx-min-width: 100; -fx-border-color: #1a1a1a; -fx-border-width: 1; -fx-border-radius: 2;">
                            <Text text="Recent" style="-fx-font-size: 14; -fx-fill: rgba(224,224,224,0.7);"/>
                            <Text fx:id="lastTransactionText" text="No transactions" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #e0e0e0; -fx-wrap-text: true;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Accounts List -->
                <VBox spacing="12" style="-fx-background-color: rgba(42,42,42,0.5); -fx-padding: 20; -fx-background-radius: 2;-fx-border-width: 1.5; -fx-border-radius: 2;">
                    <Text text="Your Accounts" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #e0e0e0;"/>
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-max-height: 350;">
                        <VBox fx:id="accountsContainer" spacing="10">
                            <Label text="Loading your accounts..." style="-fx-text-fill: rgb(51,51,51); -fx-font-size: 14; -fx-alignment: center; -fx-padding: 20;"/>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </VBox>

            <!-- RIGHT: Transaction Panel & Recent Transactions -->
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Transaction Panel -->
                <VBox fx:id="transactionPanel" visible="false" spacing="15" style="-fx-background-color: rgba(42,42,42,0.5); -fx-padding: 20; -fx-background-radius: 2; -fx-border-width: 1.5; -fx-border-radius: 2;" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT">
                        <Text fx:id="transactionTitle" text="Transaction" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #e0e0e0;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Close" onAction="#handleCloseTransaction"
                                style="-fx-background-color: rgba(255,0,0,0.7); -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-padding: 5 10;"/>
                    </HBox>

                    <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #333; -fx-background-radius: 8;">
                        <HBox spacing="10">
                            <Text text="Selected Account:" style="-fx-fill: #e0e0e0;"/>
                            <Text fx:id="selectedAccountText" text="No account selected" style="-fx-fill: #e0e0e0; -fx-font-weight: bold;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Text text="Available Balance:" style="-fx-fill: #e0e0e0;"/>
                            <Text fx:id="selectedBalanceText" text="BWP 0.00" style="-fx-fill: #e0e0e0; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="12">
                        <VBox spacing="5">
                            <Label text="Amount *" style="-fx-font-size: 14; -fx-text-fill: #e0e0e0; -fx-font-weight: bold;"/>
                            <TextField fx:id="amountField" promptText="0.00" prefWidth="250" prefHeight="35"
                                       style="-fx-background-radius: 2; -fx-border-color: #333; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 0 8; -fx-background-color: #333333; -fx-text-fill: white;"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Description" style="-fx-font-size: 14; -fx-text-fill: #e0e0e0; -fx-font-weight: bold;"/>
                            <TextField fx:id="descriptionField" promptText="Enter description" prefWidth="250" prefHeight="35"
                                       style="-fx-background-radius: 2; -fx-border-color: #333; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 0 8; -fx-background-color: #333333; -fx-text-fill: white;"/>
                        </VBox>

                        <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                            <Button text="Cancel" onAction="#handleCancelTransaction" prefWidth="100" prefHeight="35"
                                    style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 2;"/>
                            <Button fx:id="depositButton" text="Deposit" onAction="#handleDeposit" prefWidth="100" prefHeight="35"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 2;"/>
                            <Button fx:id="withdrawButton" text="Withdraw" onAction="#handleWithdraw" prefWidth="100" prefHeight="35"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 2;"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Welcome Panel -->
                <VBox fx:id="welcomePanel" alignment="CENTER" spacing="12" style="-fx-background-color: rgba(42,42,42,0.5); -fx-padding: 30; -fx-background-radius: 2; -fx-border-width: 1.5; -fx-border-radius: 2;" VBox.vgrow="ALWAYS">
                    <Text text="●" style="-fx-font-size: 50; -fx-fill: #27ae60;"/>
                    <Text text="Welcome to Your Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #e0e0e0;"/>
                    <Text text="Select an account to deposit, withdraw, or view transactions" wrappingWidth="250" textAlignment="CENTER" style="-fx-fill: rgba(224,224,224,0.7);"/>
                    <VBox spacing="8" style="-fx-padding: 15 0 0 0;">
                        <HBox spacing="8"><Text text="●" style="-fx-fill: #27ae60;"/><Text text="Click Deposit to add funds" style="-fx-fill: rgb(255,255,255);"/></HBox>
                        <HBox spacing="8"><Text text="●" style="-fx-fill: #27ae60;"/><Text text="Click Withdraw to take out money" style="-fx-fill: rgb(255,255,255);"/></HBox>
                                            </VBox>
                </VBox>

                <!-- Recent Transactions Table -->
                <VBox spacing="10" style="-fx-background-color: rgba(42,42,42,0.5); -fx-padding: 10; -fx-background-radius: 2; -fx-border-width: 1.5; -fx-border-radius: 2;" prefHeight="300">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Text text="Transactions" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #e0e0e0;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="transactionFilterComboBox" promptText="Filter" prefWidth="150" prefHeight="35"
                                  style="-fx-background-radius: 2;  -fx-border-radius: 2; -fx-border-width: 1.5; -fx-font-size: 14; -fx-background-color: #27ae60;"
                                  onAction="#handleFilterTransactions"/>
                    </HBox>

                    <TableView fx:id="transactionsTable" prefHeight="200" style="-fx-background-color:#333333;">
                        <columns>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                            <TableColumn fx:id="accountColumn" text="Account" prefWidth="120"/>
                            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120"/>
                            <TableColumn fx:id="tellerColumn" text="Teller" prefWidth="120"/>
                        </columns>
                        <placeholder>
                            <Label text="No transactions found" style="-fx-text-fill: rgb(255,255,255); -fx-alignment: center;"/>
                        </placeholder>
                    </TableView>
                </VBox>

            </VBox>
        </SplitPane>
    </center>


</BorderPane>
