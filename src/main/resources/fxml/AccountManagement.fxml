<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.CustomerDashboardController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: #f8f9fa;">

    <!-- TOP HEADER -->
    <top>
        <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Text text="Sediba Financial" style="-fx-fill: #2c3e50; -fx-font-size: 28; -fx-font-weight: bold;" />
                <Text text="Customer Dashboard" style="-fx-fill: #7f8c8d; -fx-font-size: 18;" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Text text="Good day" style="-fx-fill: #7f8c8d; -fx-font-size: 18;" />
                <Text fx:id="customerNameText" text="[Customer Name]" style="-fx-fill: #3498db; -fx-font-size: 18; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-padding: 8 15;" />
            </HBox>
        </VBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <SplitPane dividerPositions="0.65" style="-fx-background-color: transparent;">

            <!-- LEFT: Account Overview -->
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Account Summary -->
                <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT">
                        <Text text="Account Overview" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="totalBalanceLabel" text="Total: 0.00"
                               style="-fx-padding: 8 15; -fx-background-radius: 5; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white;" />
                    </HBox>
                    <HBox spacing="15" alignment="CENTER">
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 10; -fx-min-width: 100;">
                            <Text text="Accounts" style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
                            <Text fx:id="totalAccountsText" text="0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 10; -fx-min-width: 100;">
                            <Text text="This Month" style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
                            <Text fx:id="monthlySpendingText" text="BWP 0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 10; -fx-min-width: 100;">
                            <Text text="Recent" style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
                            <Text fx:id="lastTransactionText" text="No transactions" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #2c3e50; -fx-wrap-text: true;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Accounts List -->
                <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <Text text="Your Accounts" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-max-height: 350;">
                        <VBox fx:id="accountsContainer" spacing="10">
                            <Label text="Loading your accounts..." style="-fx-text-fill: #7f8c8d; -fx-font-size: 14; -fx-alignment: center; -fx-padding: 20;"/>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </VBox>

            <!-- RIGHT: Transaction Panel & Recent Transactions -->
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Transaction Panel (Now in the main area) -->
                <VBox fx:id="transactionPanel" visible="false" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT">
                        <Text fx:id="transactionTitle" text="Transaction" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Close" onAction="#handleCloseTransaction"
                                style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-padding: 5 10;"/>
                    </HBox>

                    <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 8;">
                        <HBox spacing="10">
                            <Text text="Selected Account:" style="-fx-fill: #2c3e50;"/>
                            <Text fx:id="selectedAccountText" text="No account selected" style="-fx-fill: #2c3e50; -fx-font-weight: bold;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Text text="Available Balance:" style="-fx-fill: #2c3e50;"/>
                            <Text fx:id="selectedBalanceText" text="BWP 0.00" style="-fx-fill: #2c3e50; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="12">
                        <VBox spacing="5">
                            <Label text="Amount *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                            <TextField fx:id="amountField" promptText="0.00" prefWidth="250" prefHeight="35"
                                       style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Description" style="-fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                            <TextField fx:id="descriptionField" promptText="Enter description" prefWidth="250" prefHeight="35"
                                       style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                        </VBox>
                        <VBox fx:id="transferSection" spacing="5" visible="false">
                            <Label text="To Account *" style="-fx-font-size: 14; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                            <ComboBox fx:id="transferAccountComboBox" promptText="Select account" prefWidth="250" prefHeight="35"
                                      style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                        </VBox>
                        <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                            <Button text="Cancel" onAction="#handleCancelTransaction" prefWidth="100" prefHeight="35"
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                            <!-- Deposit Button - Green -->
                            <Button fx:id="depositButton" text="Deposit" onAction="#handleDeposit" prefWidth="100" prefHeight="35"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                            <!-- Withdraw Button - Orange/Red -->
                            <Button fx:id="withdrawButton" text="Withdraw" onAction="#handleWithdraw" prefWidth="100" prefHeight="35"
                                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Welcome Panel (Default view) -->
                <VBox fx:id="welcomePanel" alignment="CENTER" spacing="12" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);" VBox.vgrow="ALWAYS">
                    <Text text="●" style="-fx-font-size: 50; -fx-fill: #3498db;"/>
                    <Text text="Welcome to Your Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                    <Text text="Select an account to deposit, withdraw, or view transactions" wrappingWidth="250" textAlignment="CENTER" style="-fx-fill: #7f8c8d;"/>
                    <VBox spacing="8" style="-fx-padding: 15 0 0 0;">
                        <HBox spacing="8"><Text text="●" style="-fx-fill: #27ae60;"/><Text text="Click Deposit to add funds" style="-fx-fill: #7f8c8d;"/></HBox>
                        <HBox spacing="8"><Text text="●" style="-fx-fill: #e74c3c;"/><Text text="Click Withdraw to take out money" style="-fx-fill: #7f8c8d;"/></HBox>
                        <HBox spacing="8"><Text text="●" style="-fx-fill: #3498db;"/><Text text="Click Transactions to view history" style="-fx-fill: #7f8c8d;"/></HBox>
                    </VBox>
                </VBox>

                <!-- Recent Transactions Table (Now always visible at the bottom) -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);" prefHeight="300">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Text text="Recent Transactions" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="transactionFilterComboBox" promptText="Filter" prefWidth="150" prefHeight="35"
                                  style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                        <Button text="View All" onAction="#handleViewAllTransactions" prefWidth="80" prefHeight="35"
                                style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-font-weight: bold; -fx-border-color: #3498db; -fx-border-radius: 5;"/>
                    </HBox>

                    <TableView fx:id="transactionsTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                            <TableColumn fx:id="accountColumn" text="Account" prefWidth="120"/>
                            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120"/>
                            <TableColumn fx:id="tellerColumn" text="Teller" prefWidth="120"/>
                        </columns>
                        <placeholder>
                            <Label text="No transactions found" style="-fx-text-fill: #7f8c8d; -fx-alignment: center;"/>
                        </placeholder>
                    </TableView>
                </VBox>

            </VBox>
        </SplitPane>
    </center>

    <!-- BOTTOM FOOTER -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Text text="© 2025 Sediba Financial. All rights reserved." style="-fx-fill: #95a5a6; -fx-font-size: 12;"/>
            <Hyperlink text="Terms and Conditions apply" onAction="#handleTermsAndConditions" style="-fx-text-fill: #3498db; -fx-font-size: 12;"/>
        </HBox>
    </bottom>

</BorderPane>