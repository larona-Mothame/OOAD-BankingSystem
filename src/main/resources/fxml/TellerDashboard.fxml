<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.TellerDashboardController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: #f8f9fa;">

    <!-- HEADER -->
    <!-- HEADER -->
    <top>
        <VBox style="-fx-background-color: white; -fx-padding: 20 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Text text="Sediba Financial"
                      style="-fx-fill: #2c3e50; -fx-font-size: 28; -fx-font-weight: bold;" />
            </HBox>
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15 0 0 0;">
                <Text text="Good Day"
                      style="-fx-fill: #7f8c8d; -fx-font-size: 18;" />
                <Text fx:id="usernameHeaderText" text="[Username]"
                      style="-fx-fill: #3498db; -fx-font-size: 18; -fx-font-weight: bold;" />

                <Region HBox.hgrow="ALWAYS" />

                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-font-weight: bold;
                               -fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-padding: 8 15;" />
            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <HBox alignment="CENTER" spacing="40" style="-fx-padding: 40;">

            <!-- LEFT SIDE: Open New Account -->
            <VBox alignment="TOP_LEFT" spacing="25" prefWidth="400">
                <Text text="Open New Account"
                      style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <!-- Account Options -->
                <VBox spacing="15" alignment="TOP_LEFT">
                    <VBox fx:id="chequingOption" alignment="CENTER_LEFT" spacing="10"
                          onMouseClicked="#openChequingAccount"
                          style="-fx-padding: 25 35; -fx-background-color: white; -fx-background-radius: 12;
                         -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                        <Text text="Chequing"
                              style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        <Text text="Daily transactions &amp; payments"
                              style="-fx-font-size: 13; -fx-fill: #7f8c8d;" />
                    </VBox>

                    <VBox fx:id="savingsOption" alignment="CENTER_LEFT" spacing="10"
                          onMouseClicked="#openSavingsAccount"
                          style="-fx-padding: 25 35; -fx-background-color: white; -fx-background-radius: 12;
                         -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                        <Text text="Savings"
                              style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        <Text text="Grow your savings securely"
                              style="-fx-font-size: 13; -fx-fill: #7f8c8d;" />
                    </VBox>

                    <VBox fx:id="investmentOption" alignment="CENTER_LEFT" spacing="10"
                          onMouseClicked="#openInvestmentAccount"
                          style="-fx-padding: 25 35; -fx-background-color: white; -fx-background-radius: 12;
                         -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                        <Text text="Investment"
                              style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                        <Text text="Build long-term wealth"
                              style="-fx-font-size: 13; -fx-fill: #7f8c8d;" />
                    </VBox>
                </VBox>

                <!-- Proceed Button -->
                <Button fx:id="proceedButton" text="Proceed"
                        onAction="#proceedAccountSelection"
                        prefWidth="200" prefHeight="45"
                        disable="true"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-font-size: 14; -fx-background-radius: 8; -fx-cursor: hand;" />
            </VBox>

            <!-- Divider -->
            <Region prefWidth="1" prefHeight="400"
                    style="-fx-background-color: #d0d0d0;" />

            <!-- RIGHT SIDE: Manage Customers -->
            <VBox alignment="TOP_LEFT" spacing="25" prefWidth="400">
                <Text text="Manage Customers"
                      style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                <Text text="View, edit, or remove customer accounts and details. Keep your client records up to date."
                      wrappingWidth="350"
                      style="-fx-fill: #7f8c8d; -fx-font-size: 14;" />
                <Button fx:id="manageCustomerButton" text="Manage"
                        onAction="#manageCustomer"
                        prefWidth="200" prefHeight="45"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-font-size: 14; -fx-background-radius: 8; -fx-cursor: hand;" />
            </VBox>
        </HBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Text text="Â© 2025 Sediba Financial. All rights reserved."
                  style="-fx-fill: #95a5a6; -fx-font-size: 12;" />
            <Hyperlink text="Terms and Conditions apply"
                       style="-fx-text-fill: #3498db; -fx-border-color: transparent; -fx-font-size: 12;" />
        </VBox>
    </bottom>
</BorderPane>