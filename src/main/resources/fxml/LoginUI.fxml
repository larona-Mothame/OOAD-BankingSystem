<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.LoginController"
            prefWidth="500" prefHeight="600">

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: linear-gradient(to bottom, #1a2a6c, #2a4a7c);">
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40 0 20 0;">
                <!-- Logo and Bank Name -->
                <HBox alignment="CENTER" spacing="15">
                    <!-- Option 1: Remove the ImageView completely -->
                    <Text fx:id="bankName" text="Sediba Financial" style="-fx-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" />
                </HBox>

                <Text text="Secure Login" style="-fx-fill: #e0e0e0; -fx-font-size: 16;" />
            </VBox>

            <!-- Login Form Card -->
            <VBox fx:id="loginCard" alignment="CENTER" spacing="25"
                  prefWidth="400" prefHeight="300"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
                <Text text="Welcome Back" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <!-- Username Field -->
                <VBox spacing="8" prefWidth="320">
                    <Label text="Username" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                    <TextField fx:id="usernameField" promptText="Enter your username"
                               style="-fx-pref-width: 320; -fx-pref-height: 40; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8" prefWidth="320">
                    <Label text="Password" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password"
                                   style="-fx-pref-width: 320; -fx-pref-height: 40; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                </VBox>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login"
                        onAction="#handleLogin" prefWidth="320" prefHeight="45"
                        style="-fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />

                <!-- Error Message Label -->
                <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12; -fx-padding: 5 0 0 0;"
                       visible="false" text="Error message will appear here" /></VBox>

            <!-- Footer -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <Text text="Â© 2025 Sediba Financial. All rights reserved."
                      style="-fx-fill: #e0e0e0; -fx-font-size: 12;" />
                <Hyperlink text="Terms and Conditions apply"
                           style="-fx-text-fill: #e0e0e0; -fx-border-color: transparent;" />
            </VBox>
        </VBox>
    </center>
</BorderPane>