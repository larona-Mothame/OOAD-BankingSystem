<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="1080" prefWidth="1920" style="-fx-background-color: rgb(28,59,44);"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.LoginController">

    <center>
        <VBox alignment="CENTER" prefHeight="800.0" prefWidth="568.0" spacing="50" style="-fx-padding: 60 0 40 0;">

            <!-- Header with Logo -->
            <VBox alignment="CENTER" spacing="15">
                <ImageView fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/5802818.png" />
                    </image>
                </ImageView>

                <Text style="-fx-fill: white; -fx-font-size: 36; -fx-font-weight: bold;" text="Sediba Financial" />
            </VBox>

            <!-- Form Section -->
            <VBox alignment="CENTER" spacing="25">

                <!-- Username Row -->
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13;" text="Username" />
                    <TextField fx:id="usernameField" prefHeight="50" prefWidth="430" promptText="Enter your username" style="-fx-background-radius: 8; -fx-border-color: rgb(34,255,0);-fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14;-fx-padding: 0 8; -fx-background-color: rgb(30,30,30); -fx-text-fill: white;" />
                </HBox>

                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13;" text="Password" />

                    <StackPane >
                        <!-- PasswordField -->
                        <PasswordField fx:id="passwordField" prefHeight="50" prefWidth="430"
                                       promptText="Enter your password"
                                       style="-fx-background-radius: 8; -fx-border-color: rgb(34,255,0); -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 0 8; -fx-background-color: rgb(30,30,30); -fx-text-fill: white;" />

                        <!-- Visible text field -->
                        <TextField fx:id="passwordVisible" prefHeight="50" prefWidth="430"
                                   promptText="Enter your password" visible="false" managed="false"
                                   style="-fx-background-radius: 8; -fx-border-color: rgb(34,255,0); -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 0 8; -fx-background-color: rgb(30,30,30); -fx-text-fill: white;" />

                        <!-- Eye button -->
                        <Button fx:id="togglePasswordBtn" prefHeight="30" prefWidth="30"
                                style="-fx-background-color: transparent; -fx-cursor: hand;"
                                StackPane.alignment="CENTER_RIGHT">
                            <graphic>
                                <ImageView fx:id="eyeIcon" fitHeight="20" fitWidth="20" pickOnBounds="true"
                                           preserveRatio="true" />
                            </graphic>
                        </Button>
                    </StackPane>
                </HBox>



                <!-- Login Button + Error -->
                <VBox alignment="CENTER" spacing="10">
                    <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="30" prefWidth="120" style="-fx-background-color: #19df81; -fx-text-fill: white; -fx-font-weight: bold;-fx-font-size: 14; -fx-background-radius: 8; -fx-cursor: hand;" text="Login" />

                    <Label fx:id="errorLabel" style="-fx-text-fill: #f39c12; -fx-font-size: 12; -fx-alignment: center;                                   -fx-wrap-text: true; -fx-background-color: rgba(255,255,255,0.1);-fx-background-radius: 4; -fx-padding: 8;" text="Error message will appear here" visible="false" />
                </VBox>

            </VBox>

            <!-- Footer -->
            <VBox alignment="CENTER" spacing="20">
                <Text style="-fx-fill: rgba(255,255,255,0.6); -fx-font-size: 12;" text="Â© 2025 Sediba Financial. All rights reserved." />
                <Hyperlink style="-fx-text-fill: rgba(255,255,255,0.8); -fx-border-color: transparent; -fx-font-size: 12;" text="Terms and Conditions apply" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
