<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.seqiba.CustomerManagementController"
            stylesheets="@customer-management.css"
            prefWidth="850" prefHeight="700">

    <top>
        <!-- Header Section -->
        <VBox styleClass="header" spacing="10">
            <!-- Top Bar with Logo and User Info -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30 10 30;">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <ImageView fx:id="companyLogo" fitWidth="35" fitHeight="35" preserveRatio="true">
                        <Image url="@seqiba-logo.png" />
                    </ImageView>
                    <Text text="Seqiba Financial" styleClass="company-name" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Text text="Good Day" styleClass="greeting" />
                    <Text fx:id="usernameHeaderText" text="[Username]" styleClass="username-header" />
                </VBox>

                <Button text="Logout" styleClass="logout-button" onAction="#handleLogout" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 25 30 25 30;">
            <!-- Lookup Section -->
            <VBox alignment="CENTER_LEFT" spacing="15" styleClass="lookup-section">
                <HBox alignment="CENTER_LEFT" spacing="30">
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 400;">
                        <Label text="Lookup Account/Customer" styleClass="section-label" />
                        <TextField fx:id="searchField" styleClass="search-field"
                                   promptText="Enter customer name, account number, or ID..." />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text=" " styleClass="section-label" /> <!-- Spacer -->
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Text fx:id="currentUserText" text="[Username]" styleClass="current-user" />
                            <Hyperlink text="view all accounts" styleClass="view-all-link"
                                       onAction="#handleViewAllAccounts" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Separator -->
            <Separator styleClass="main-separator" />

            <!-- Customer Details Section -->
            <VBox alignment="TOP_LEFT" spacing="25" styleClass="details-section">
                <Text text="Customer Information" styleClass="section-title" />

                <!-- Personal Information Row -->
                <HBox alignment="TOP_LEFT" spacing="40">
                    <!-- First Name -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 250;">
                        <Label text="First name" styleClass="field-label" />
                        <TextField fx:id="firstNameField" styleClass="detail-field"
                                   promptText="Enter first name" />
                    </VBox>

                    <!-- Last Name -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 250;">
                        <Label text="Last name" styleClass="field-label" />
                        <TextField fx:id="lastNameField" styleClass="detail-field"
                                   promptText="Enter last name" />
                    </VBox>
                </HBox>

                <!-- Second Row -->
                <HBox alignment="TOP_LEFT" spacing="40">
                    <!-- Gender -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 250;">
                        <Label text="Gender" styleClass="field-label" />
                        <ComboBox fx:id="genderComboBox" styleClass="detail-combo"
                                  promptText="Select gender" />
                    </VBox>

                    <!-- ID Number -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 250;">
                        <Label text="Omanq / Passport number" styleClass="field-label" />
                        <TextField fx:id="idNumberField" styleClass="detail-field"
                                   promptText="Enter ID or passport number" />
                    </VBox>
                </HBox>

                <!-- Third Row -->
                <HBox alignment="TOP_LEFT" spacing="40">
                    <!-- Account Count -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 250;">
                        <Label text="Number of accounts associated with user" styleClass="field-label" />
                        <TextField fx:id="accountCountField" styleClass="detail-field"
                                   promptText="0" editable="false" />
                    </VBox>

                    <!-- Other Info (if needed) -->
                    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-pref-width: 250;">
                        <Label text="Other information" styleClass="field-label" />
                        <TextField fx:id="otherInfoField" styleClass="detail-field"
                                   promptText="Additional details" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20 0 0 0;">
                <Button text="Update" styleClass="update-button" onAction="#handleUpdate" />
                <Button text="Save" styleClass="save-button" onAction="#handleSave" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="8" styleClass="footer">
            <Text text="Â© 2025 Seqiba Financial. All rights reserved." styleClass="footer-text" />
            <Hyperlink text="Terms and Conditions apply" styleClass="footer-link"
                       onAction="#handleTermsAndConditions" />
        </VBox>
    </bottom>
</BorderPane>