<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.TransactionController"
            prefWidth="900" prefHeight="700">

    <top>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30 10 30; -fx-background-color: #1a2a6c;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <!-- Removed problematic ImageView with external image reference -->
                <Text text="Sediba Financial" style="-fx-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Text text="Good Day" style="-fx-fill: #e0e0e0; -fx-font-size: 14;" />
                <Text fx:id="usernameText" text="[Username]" style="-fx-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
            </VBox>

            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 15 5 15;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 25 40 25 40;">
            <!-- Account Lookup -->
            <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Find Account" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <TextField fx:id="accountSearchField" promptText="Enter account number..."
                               style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    <Button text="Search" onAction="#handleSearchAccount"
                            style="-fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                </HBox>
            </VBox>

            <!-- Account Summary -->
            <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Account Summary" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <HBox alignment="TOP_LEFT" spacing="60">
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Account Holder:" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <Text fx:id="accountHolderText" text="-" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Account Number:" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <Text fx:id="accountNumberText" text="-" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Current Balance:" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <Text fx:id="balanceText" text="0.00" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #27ae60;" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Transaction Section -->
            <VBox alignment="CENTER_LEFT" spacing="25" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Perform Transaction" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <HBox alignment="CENTER_LEFT" spacing="40">
                    <!-- Transaction Type -->
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Transaction Type" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <ComboBox fx:id="transactionTypeCombo" promptText="Select type"
                                  style="-fx-pref-width: 200; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Amount -->
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Amount (USD)" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <TextField fx:id="amountField" promptText="Enter amount"
                                   style="-fx-pref-width: 200; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Reference -->
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Reference / Note" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;" />
                        <TextField fx:id="referenceField" promptText="Enter optional note"
                                   style="-fx-pref-width: 200; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>
                </HBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER_LEFT" spacing="30" style="-fx-padding: 15 0 0 0;">
                    <Button text="Confirm Transaction" onAction="#handleConfirmTransaction"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                    <Button text="Clear" onAction="#handleClear"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" />
                </HBox>
            </VBox>

            <!-- Transaction Log Table -->
            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
                <Text text="Recent Transactions" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
                <TableView fx:id="transactionTable" prefHeight="200"
                           style="-fx-background-color: transparent; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn text="Date" prefWidth="150" />
                        <TableColumn text="Type" prefWidth="100" />
                        <TableColumn text="Amount (USD)" prefWidth="150" />
                        <TableColumn text="Balance After" prefWidth="150" />
                        <TableColumn text="Reference" prefWidth="200" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            <Text text="Â© 2025 Sediba Financial. All rights reserved." style="-fx-fill: #7f8c8d; -fx-font-size: 12;" />
            <Hyperlink text="Terms and Conditions apply" onAction="#handleTermsAndConditions"
                       style="-fx-text-fill: #1a2a6c; -fx-border-color: transparent;" />
        </VBox>
    </bottom>
</BorderPane>