<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.controllers.LoginController"
            stylesheets="@css/style.css"
            prefWidth="500" prefHeight="600">

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: linear-gradient(to bottom, #1a2a6c, #2a4a7c);">
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40 0 20 0;">
                <!-- Logo and Bank Name -->
                <HBox alignment="CENTER" spacing="15">
                    <ImageView fx:id="bankLogo" fitWidth="60" fitHeight="60" preserveRatio="true">
                        <Image url="@" />
                    </ImageView>
                    <Text fx:id="bankName" text="Sediba Financial" style="-fx-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" />
                </HBox>

                <Text text="Secure Login" style="-fx-fill: #e0e0e0; -fx-font-size: 16;" />
            </VBox>

            <!-- Login Form Card -->
            <VBox fx:id="loginCard" styleClass="login-card" alignment="CENTER" spacing="25"
                  prefWidth="400" prefHeight="300">
                <Text text="Welcome Back" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

                <!-- Username Field -->
                <VBox spacing="8" prefWidth="320">
                    <Label text="Username" styleClass="form-label" />
                    <TextField fx:id="usernameField" styleClass="form-field" promptText="Enter your username" />
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8" prefWidth="320">
                    <Label text="Password" styleClass="form-label" />
                    <PasswordField fx:id="passwordField" styleClass="form-field" promptText="Enter your password" />
                </VBox>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login" styleClass="login-button"
                        onAction="#handleLogin" prefWidth="320" prefHeight="45" />
            </VBox>

            <!-- Footer -->
            <VBox alignment="CENTER" spacing="10" styleClass="footer">
                <Text text="Â© 2025 Sediba Financial. All rights reserved." styleClass="footer-text" />
                <Hyperlink text="Terms and Conditions apply" styleClass="footer-link" />
            </VBox>
        </VBox>
    </center>
</BorderPane>